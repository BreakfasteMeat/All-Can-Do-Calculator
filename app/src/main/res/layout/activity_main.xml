<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FF252525">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:layout_marginVertical="10dp"
        android:useDefaultMargins="true"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnAllClear"
            android:text="AC"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_circle_secondary"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FF000000"
            android:focusable="true"
            android:clickable="true"
        />

        <Button
            android:id="@+id/btnChangeSign"
            android:text="+/-"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_circle_secondary"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FF000000"
            android:focusable="true"
            android:clickable="true"
            />
        <Button
            android:id="@+id/btnPercent"
            android:text="%"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_circle_secondary"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FF000000"
            android:focusable="true"
            android:clickable="true"
            />

        <Button
            android:id="@+id/btnBackspace"
            android:text="⌫"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_circle_secondary"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FF000000"
            android:focusable="true"
            android:clickable="true"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            />

        <!--2ND ROW-->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_circle_main"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FFFFFFFF"
            android:focusable="true"
            android:clickable="true"
            />

        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_circle_main"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FFFFFFFF"
            android:focusable="true"
            android:clickable="true"
            />
        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_circle_main"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FFFFFFFF"
            android:focusable="true"
            android:clickable="true"
            />

        <Button
            android:id="@+id/btnDiv"
            android:text="÷"
            android:textSize="50sp"
            android:fontFamily="@font/inter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_circle_orange"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FFFFFFFF"
            android:focusable="true"
            android:clickable="true"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            />

        <!--3RD ROW-->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_circle_main"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FFFFFFFF"
            android:focusable="true"
            android:clickable="true"
            />

        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_circle_main"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FFFFFFFF"
            android:focusable="true"
            android:clickable="true"
            />
        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_circle_main"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FFFFFFFF"
            android:focusable="true"
            android:clickable="true"
            />

        <Button
            android:id="@+id/btnMul"
            android:text="×"
            android:textSize="50sp"
            android:fontFamily="@font/inter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_circle_orange"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FFFFFFFF"
            android:focusable="true"
            android:clickable="true"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            />
        <!--4TH ROW-->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_circle_main"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FFFFFFFF"
            android:focusable="true"
            android:clickable="true"
            />

        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_circle_main"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FFFFFFFF"
            android:focusable="true"
            android:clickable="true"
            />
        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_circle_main"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FFFFFFFF"
            android:focusable="true"
            android:clickable="true"
            />

        <Button
            android:id="@+id/btnMin"
            android:text="-"
            android:textSize="50sp"
            android:fontFamily="@font/inter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_circle_orange"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FFFFFFFF"
            android:focusable="true"
            android:clickable="true"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            />

    </GridLayout>
</LinearLayout>