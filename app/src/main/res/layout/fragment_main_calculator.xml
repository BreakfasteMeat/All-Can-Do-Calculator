<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainCalculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FF252525"
    android:orientation="vertical"
    android:gravity="bottom|center_horizontal">

    <TextView
        android:id="@+id/txtvwRecentHistory"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="20sp"
        android:gravity="end|bottom"
        android:text=""
        android:textColor="@color/recHistory_gray"
        android:fontFamily="@font/inter"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@+id/txtvwEquation"
        android:layout_marginBottom="10dp"

        />

    <TextView
        android:id="@+id/txtvwEquation"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="60sp"
        android:text=""
        android:textColor="@color/white"
        android:fontFamily="@font/inter"
        android:gravity="end"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@+id/grdButtons"
        android:layout_marginBottom="10dp"/>
    <GridLayout
        android:id="@+id/grdButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:layout_marginBottom="30dp"
        android:useDefaultMargins="false"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >



        <Button
            android:id="@+id/btnAllClear"
            android:text="AC"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/btn_circle_secondary"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FF000000"
            android:focusable="true"
            android:clickable="true"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/btnChangeSign"
            android:text="+/-"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/btn_circle_secondary"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FF000000"
            android:focusable="true"
            android:clickable="true"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btnPercent"
            android:text="%"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/btn_circle_secondary"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FF000000"
            android:focusable="true"
            android:clickable="true"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/btnBackspace"
            android:text="⌫"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/btn_circle_secondary"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FF000000"
            android:focusable="true"
            android:clickable="true"
            android:layout_margin="5dp"
            />
        <!--2ND ROW-->
        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/btn_circle_main"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FFFFFFFF"
            android:focusable="true"
            android:clickable="true"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/btn_circle_main"
