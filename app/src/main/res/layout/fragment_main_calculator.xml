            android:id="@+id/btnMore"
            android:text="\?"
            android:textSize="35sp"
            android:fontFamily="@font/inter"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/btn_circle_main"
            android:gravity="center"
